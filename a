def bet(principal):
    bet = input("Please input the bet amount:")
    if (int(principal) - int(bet)) < 0:
        print ("You dont have enough money, please add money or leave")
        val = input("Type 1 to buy-in or Type 2 to leave")
        if val == "1":
            bet = input("Please input the bet amount:")
        elif val == "2":
            print ("Thank you for joining. Goodbye!")
            quit()
        else:
            print ("invalid number")
    return int(bet)
    
def betBigSmall():
    betBigSmall = input("Please bet Big / Small:")
    return betBigSmall
    
